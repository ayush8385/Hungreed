<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:padding="40dp"
    tools:context=".activity.Forgot">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/hungreed"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/otp_img"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:maxLength="4"
        android:textSize="18sp"
        android:padding="13dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:inputType="number"
        android:layout_below="@+id/otp_img"
        android:id="@+id/otp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:background="@color/white"
        android:textSize="18sp"
        android:padding="13dp"
        android:layout_marginTop="8dp"
        android:inputType="numberPassword"
        android:layout_below="@+id/otp"
        android:id="@+id/otp_newpass"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:background="@color/white"
        android:textSize="18sp"
        android:padding="13dp"
        android:layout_marginTop="8dp"
        android:inputType="numberPassword"
        android:layout_below="@+id/otp_newpass"
        android:id="@+id/otp_cnfpass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:padding="10dp"
        android:background="@drawable/button"
        android:layout_below="@id/otp_cnfpass"
        android:id="@+id/submit_btn"/>

</RelativeLayout>